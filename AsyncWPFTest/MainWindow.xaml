<Window x:Class="AsyncWPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncWPFTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <UniformGrid VerticalAlignment="Top" Rows="1">
                <Button Content="Запуск" Height="30" Click="OnStartButtonClick"></Button>
                <Button Content="Остановка" Click="OnStopButtonClick"></Button>
            </UniformGrid>
            <ProgressBar Name="Progress" Height="30"/>
            <TextBlock>
                Результат:<Run Name="Result">Отсутствует</Run>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
