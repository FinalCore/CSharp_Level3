<Window x:Class="MyMailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:RAEDToolBar;assembly=RAEDToolBar"
        xmlns:local="clr-namespace:MyMailSender"       
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"></MenuItem>
                <MenuItem Header="Открыть"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
                <Separator/>
                <MenuItem Header="Выход"></MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь"></MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Приложение работает..."></TextBlock>
        </StatusBar>
        <TabControl x:Name="tabControl" DockPanel.Dock="Top">
            <TabItem x:Name="SendMail" Header="Отправить письмо">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0">
                        <StackPanel  x:Name="spSenders" Margin="10">
                            <StackPanel.Resources>
                                <Style x:Key="Sender">
                                    <Setter Property="Control.Margin" Value="10,5,10,5"></Setter>
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="Отправитель" Style="{StaticResource Sender}"></TextBlock>
                            <TextBox x:Name="tbSenderLogin" Style="{StaticResource Sender}" Text="rimedheart@yandex.ru"></TextBox>
                            <PasswordBox x:Name="pbSenderPassword" Style="{StaticResource Sender}" ></PasswordBox>
                            <ComboBox x:Name="cbRecipients" Style="{StaticResource Sender}" Text="rimedheart@yandex.ru"></ComboBox>
                            <Button x:Name="btnSendMail" Content="Отправить" Style="{StaticResource Sender}" Click="btnSendMail_Click"></Button>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Column="1">
                        <DockPanel>
                            <GroupBox DockPanel.Dock="Top" Header="Тема письма">
                                <TextBox Name="tbMailTopic" />
                            </GroupBox>
                            <GroupBox Header="Текст письма">
                                <Grid>
                                    <TextBox TextWrapping="Wrap" AcceptsReturn="True" Name="tbMailText"/>
                                </Grid>
                            </GroupBox>
                        </DockPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Рассылка" ToolTip="Управление рассылкой">
                <DockPanel>
                    <ToolBarTray DockPanel.Dock="Top">
                        <ToolBar>
                            <uc:RAEDToolBarControl Name="tbSenders" Width="320"></uc:RAEDToolBarControl>
                        </ToolBar>
                        <ToolBar Header="Сервера" Band="1">
                            <ComboBox Name="serversList" ItemsSource="{x:Static local:TestData.Servers}" SelectedIndex="0" Width="180" Margin="27,0,0,0"
                                       DisplayMemberPath="Name"></ComboBox>
                            <Button>
                                <Image Height ="14" Source="Images\Add_color.png"></Image>
                            </Button>
                            <Button>
                                <Image Height="14" Source="Images\Edit_color.png"></Image>
                            </Button>
                            <Button>
                                <Image Height="14" Source="Images\Delete_color.png"></Image>
                            </Button>
                        </ToolBar>
                        <ToolBar Header ="Перейти в планировщик" Band="0" Margin="10,0,0,0">
                            <Button x:Name="btnGoToCalendar" Click="btnGotoCalendar_Click">
                                <Image Height="14" Source="Images\Calendar_color.png"></Image>
                            </Button>
                        </ToolBar>
                    </ToolBarTray>
                    <GroupBox Header="Получатели писем" DockPanel.Dock="Top">
                        <DataGrid Name="recepientsList"  AutoGenerateColumns="False" ItemsSource="{x:Static local:Database.Recipients}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Width="40" Binding="{Binding Id}"></DataGridTextColumn>
                                <DataGridTextColumn x:Name="Name" Header="Имя" Width="200" Binding="{Binding Name}"></DataGridTextColumn>
                                <DataGridTextColumn x:Name="Email" Header="Адрес" Width="*" Binding="{Binding Email}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </DockPanel>
            </TabItem>
            <TabItem Name="Calendar" Header="Планировщик" ToolTip="Планирование времени рассылки">
                <DockPanel>
                    <GroupBox Header="Задачи" DockPanel.Dock="Left" Width="500">
                        <ListBox>
                            <ListBoxItem HorizontalContentAlignment="Stretch">
                                <GroupBox Header="Задача1" >
                                    <StackPanel>
                                        <TextBlock Text="Время"></TextBlock>
                                        <TextBlock Text="Сервер" ></TextBlock>
                                        <TextBlock Text="Отправитель" ></TextBlock>
                                        <TextBlock Text="Список получателей" ></TextBlock>
                                    </StackPanel>
                                </GroupBox>
                            </ListBoxItem>
                        </ListBox>
                    </GroupBox>
                    <GroupBox Header="Расписание" DockPanel.Dock="Left">
                        <StackPanel>
                            <Calendar></Calendar>
                            <StackPanel Margin="50,0,50,0">
                                <Button Click="Button_Click">
                                    <DockPanel>
                                        <TextBlock Text="Запланировать" HorizontalAlignment="Left"></TextBlock>
                                        <Image Height="14" Source="Images\Add_color.png" Margin="10,0,0,0"></Image>
                                    </DockPanel>
                                </Button>
                                <Button Click="OnSendButtonClick">
                                    <DockPanel>
                                        <TextBlock Text="Отправить" HorizontalAlignment="Left"></TextBlock>
                                        <Image Height="14" Source="Images\Send_color.png" Margin="10,0,0,0"></Image>
                                    </DockPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </DockPanel>
            </TabItem>
            <TabItem Name="Mails" Header="Письма">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="300" Width="150.4"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Список писем" Margin="0,0,0.4,0">
                        <DockPanel>
                            <UniformGrid DockPanel.Dock="Bottom" Rows="1">
                                <Button Content="Добавить"/>
                                <Button Content="Удалить"/>
                            </UniformGrid>
                            <ListBox>

                            </ListBox>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox Header="Выбранное письмо" Grid.ColumnSpan="2" Margin="150,0,0,0">
                        <DockPanel>
                            <GroupBox DockPanel.Dock="Top" Header="Тема письма">
                                <TextBox Name="MailHeader" />
                            </GroupBox>
                            <GroupBox Header="Текст письма">
                                <Grid>
                                    <TextBox TextWrapping="Wrap" AcceptsReturn="True" Name="MailBody"/>
                                </Grid>
                            </GroupBox>
                        </DockPanel>
                    </GroupBox>
                    <GridSplitter HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="4" Background="Transparent" Grid.ColumnSpan="2" Margin="150,0,0,0"/>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>

</Window>
